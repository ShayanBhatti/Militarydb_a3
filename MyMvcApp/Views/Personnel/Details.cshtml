@model MyMvcApp.Models.Personnel

@{
    ViewData["Title"] = "Personnel Details";
}

<div class="card">
    <div class="card-header">
        <h3>Personnel Details</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.Personnelid</dd>

            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Rank</dt>
            <dd class="col-sm-9">@Model.Rank</dd>

            <dt class="col-sm-3">Unit</dt>
            <dd class="col-sm-9">@Model.Unitname</dd>

            <dt class="col-sm-3">Contact</dt>
            <dd class="col-sm-9">@Model.Contactnumber</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Joining Date</dt>
            <dd class="col-sm-9">@Model.Joiningdate?.ToString("d")</dd>

            <dt class="col-sm-3">Emergency Contact</dt>
            <dd class="col-sm-9">@Model.Emergencycontact</dd>

            <dt class="col-sm-3">Blood Group</dt>
            <dd class="col-sm-9">@Model.Bloodgroup</dd>

            <dt class="col-sm-3">Weapon Assigned</dt>
            <dd class="col-sm-9">@Model.Weaponassigned</dd>

            <dt class="col-sm-3">Duty Status</dt>
            <dd class="col-sm-9">
                <span class="badge bg-@(Model.Dutystatus == "Active" ? "success" : "secondary")">
                    @Model.Dutystatus
                </span>
            </dd>
        </dl>

        @if (Model.Missioncodes?.Any() == true)
        {
            <h4>Assigned Missions</h4>
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Mission Code</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var mission in Model.Missioncodes)
                    {
                        <tr>
                            <td>@mission.Missioncode</td>
                            <td>@mission.Missiondate?.ToString("d")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model.Personnelid" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>