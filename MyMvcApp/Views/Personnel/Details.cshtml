@model MyMvcApp.Models.Personnel

@{
    ViewData["Title"] = "Personnel Details";
}

<div class="card">
    <div class="card-header">
        <h3>Personnel Details</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Rank</dt>
            <dd class="col-sm-9">@Model.Rank</dd>

            <dt class="col-sm-3">Unit</dt>
            <dd class="col-sm-9">@Model.Unitname</dd>

            <dt class="col-sm-3">Contact Number</dt>
            <dd class="col-sm-9">@Model.Contactnumber</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Joining Date</dt>
            <dd class="col-sm-9">@(Model.Joiningdate?.ToString("d") ?? "Not specified")</dd>

            <dt class="col-sm-3">Emergency Contact</dt>
            <dd class="col-sm-9">@(Model.Emergencycontact ?? "Not specified")</dd>

            <dt class="col-sm-3">Blood Group</dt>
            <dd class="col-sm-9">@(Model.Bloodgroup ?? "Not specified")</dd>

            <dt class="col-sm-3">Weapon Assigned</dt>
            <dd class="col-sm-9">@(Model.Weaponassigned ?? "Not specified")</dd>

            <dt class="col-sm-3">Duty Status</dt>
            <dd class="col-sm-9">@Model.Dutystatus</dd>
        </dl>
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model.Personnelid" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>