@model MyMvcApp.Models.Personnel

@{
    ViewData["Title"] = "Delete Personnel";
}

<div class="card">
    <div class="card-header bg-danger text-white">
        <h3>Delete Personnel</h3>
    </div>
    <div class="card-body">
        <div asp-validation-summary="All" class="text-danger"></div>
        
        <h4 class="mb-3">Are you sure you want to delete this personnel record?</h4>
        
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Rank</dt>
            <dd class="col-sm-9">@Model.Rank</dd>

            <dt class="col-sm-3">Unit</dt>
            <dd class="col-sm-9">@Model.Unitname</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Duty Status</dt>
            <dd class="col-sm-9">@Model.Dutystatus</dd>
        </dl>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Personnelid" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>