@model MyMvcApp.Models.Unit

@{
    ViewData["Title"] = "Unit Details";
}

<div class="card">
    <div class="card-header">
        <h3>Unit Details</h3>
    </div>
    <div class="card-body">
        <dl class="row mb-4">
            <dt class="col-sm-3">Unit Name</dt>
            <dd class="col-sm-9">@Model.Unitname</dd>

            <dt class="col-sm-3">Location</dt>
            <dd class="col-sm-9">@Model.Unitlocation</dd>
        </dl>

        <h4 class="mb-3">Personnel in Unit</h4>
        @if (Model.Personnel != null && Model.Personnel.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Rank</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var person in Model.Personnel)
                    {
                        <tr>
                            <td>@person.Name</td>
                            <td>@person.Rank</td>
                            <td>
                                <a asp-controller="Personnel" asp-action="Details" asp-route-id="@person.Personnelid" class="btn btn-info btn-sm">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">No personnel assigned to this unit.</p>
        }
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model.Unitname" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>