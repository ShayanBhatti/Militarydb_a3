@model IEnumerable<MyMvcApp.Models.Unit>

@{
    ViewData["Title"] = "Military Units";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3>Military Units</h3>
        <a asp-action="Create" class="btn btn-primary">Add New Unit</a>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Unit Name</th>
                    <th>Location</th>
                    <th>Personnel Count</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var unit in Model)
                {
                    <tr>
                        <td>@unit.Unitname</td>
                        <td>@unit.Unitlocation</td>
                        <td>@unit.Personnel?.Count ?? 0</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@unit.Unitname" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Details" asp-route-id="@unit.Unitname" class="btn btn-info btn-sm">Details</a>
                                <a asp-action="Delete" asp-route-id="@unit.Unitname" class="btn btn-danger btn-sm">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.table').DataTable();
        });
    </script>
}