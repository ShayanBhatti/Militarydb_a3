@model MyMvcApp.Models.Unit

@{
    ViewData["Title"] = "Delete Unit";
}

<h1>Delete Unit</h1>

<h3>Are you sure you want to delete this unit?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Unitname)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Unitname)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Unitlocation)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Unitlocation)</dd>
    </dl>

    @if (Model.Personnel.Any())
    {
        <div class="alert alert-warning">
            Warning: This unit has @Model.Personnel.Count personnel assigned to it. 
            Deleting this unit may affect these assignments.
        </div>
    }
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Unitname" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>