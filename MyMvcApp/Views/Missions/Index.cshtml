@model IEnumerable<MyMvcApp.Models.Mission>

@{
    ViewData["Title"] = "Military Missions";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3>Military Missions</h3>
        <a asp-action="Create" class="btn btn-primary">New Mission</a>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Mission Code</th>
                    <th>Date</th>
                    <th>Personnel Count</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var mission in Model)
                {
                    <tr>
                        <td>@mission.Missioncode</td>
                        <td>@mission.Missiondate?.ToString("d")</td>
                        <td>@mission.Personnel?.Count ?? 0</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@mission.Missioncode" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Details" asp-route-id="@mission.Missioncode" class="btn btn-info btn-sm">Details</a>
                                <a asp-action="Delete" asp-route-id="@mission.Missioncode" class="btn btn-danger btn-sm">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.table').DataTable();
        });
    </script>
}